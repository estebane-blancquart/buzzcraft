{
  "name": "buzzcraft",
  "version": "1.0.0",
  "description": "Web application generator",
  "type": "module",
  "workspaces": [
    "app-api",
    "app-client", 
    "app-server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w app-api\" \"npm run dev -w app-client\"",
    "build": "npm run build -w app-client",
    "check": "eslint . --ext .js,.jsx && stylelint \"app-client/**/*.scss\" && prettier --check .",
    "fix": "eslint . --ext .js,.jsx --fix && prettier --write .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "reset": "rm -rf node_modules app-*/node_modules && npm install && npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^9.0.0",
    "jest": "^30.0.5",
    "prettier": "^3.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.0.0"
  }
}