{
  "id": "button",
  "type": "button",
  "name": "Button Component",
  "schema": {
    "text": {
      "type": "string",
      "default": "Click me",
      "required": true
    },
    "action": {
      "type": "string",
      "default": ""
    },
    "buttonType": {
      "type": "enum",
      "options": ["button", "submit", "reset"],
      "default": "button"
    },
    "icon": {
      "type": "string",
      "default": ""
    },
    "iconPosition": {
      "type": "enum",
      "options": ["left", "right"],
      "default": "left"
    },
    "classname": {
      "type": "string",
      "default": ""
    },
    
    "backgroundColor": {
      "type": "color",
      "default": "#007bff"
    },
    "textColor": {
      "type": "color",
      "default": "white"
    },
    "fontSize": {
      "type": "string",
      "default": "1rem"
    },
    "fontWeight": {
      "type": "enum",
      "options": ["300", "400", "500", "600", "700"],
      "default": "500"
    },
    "textAlign": {
      "type": "enum",
      "options": ["left", "center", "right"],
      "default": "center"
    },
    "border": {
      "type": "string",
      "default": "none"
    },
    "borderRadius": {
      "type": "string",
      "default": "6px"
    },
    "boxShadow": {
      "type": "string",
      "default": ""
    },
    "padding": {
      "type": "string",
      "default": "12px 24px"
    }
  }
}