{
  "id": "link",
  "type": "link",
  "name": "Link Component",
  "schema": {
    "text": {
      "type": "string",
      "default": "Link text",
      "required": true
    },
    "href": {
      "type": "string",
      "default": "#",
      "required": true
    },
    "target": {
      "type": "enum",
      "options": ["_self", "_blank", "_parent", "_top"],
      "default": "_self"
    },
    "classname": {
      "type": "string",
      "default": ""
    },
    
    "backgroundColor": {
      "type": "color",
      "default": ""
    },
    "textColor": {
      "type": "color",
      "default": "#007bff"
    },
    "fontSize": {
      "type": "string",
      "default": "1rem"
    },
    "fontWeight": {
      "type": "enum",
      "options": ["300", "400", "500", "600", "700"],
      "default": "400"
    },
    "textAlign": {
      "type": "enum",
      "options": ["left", "center", "right"],
      "default": "left"
    },
    "textDecoration": {
      "type": "enum",
      "options": ["none", "underline", "overline", "line-through"],
      "default": "underline"
    },
    "border": {
      "type": "string",
      "default": ""
    },
    "borderRadius": {
      "type": "string",
      "default": "0"
    },
    "boxShadow": {
      "type": "string",
      "default": ""
    }
  }
}