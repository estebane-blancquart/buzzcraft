{
  "id": "image",
  "type": "image",
  "name": "Image Component",
  "schema": {
    "src": {
      "type": "string",
      "default": "https://picsum.photos/400/300",
      "required": true
    },
    "alt": {
      "type": "string",
      "default": "Image description",
      "required": true
    },
    "lazy": {
      "type": "boolean",
      "default": true
    },
    "objectFit": {
      "type": "enum",
      "options": ["contain", "cover", "fill", "none"],
      "default": "cover"
    },
    "classname": {
      "type": "string",
      "default": ""
    },
    
    "width": {
      "type": "string",
      "default": "auto"
    },
    "height": {
      "type": "string",
      "default": "auto"
    },
    "backgroundColor": {
      "type": "color",
      "default": ""
    },
    "border": {
      "type": "string",
      "default": ""
    },
    "borderRadius": {
      "type": "string",
      "default": "0"
    },
    "boxShadow": {
      "type": "string",
      "default": ""
    },
    "opacity": {
      "type": "number",
      "default": 1,
      "min": 0,
      "max": 1
    }
  }
}